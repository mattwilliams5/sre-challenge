#vhost template file

<% if @port== 443 -%>
	NameVirtualHost *:443
<% end -%>

<VirtualHost *:<%= @port %> >

	ServerName <%= @domain %>
	DocumentRoot <%= @document_root %>

  <Directory />
    AllowOverride None
  </Directory>
  <Directory  <%= @document_root %>  >
    Options Indexes FollowSymLinks MultiViews
    AllowOverride None
    Order allow,deny
    allow from all
  </Directory> 
</VirtualHost>

